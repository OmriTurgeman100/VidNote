{
  "name": "vidnote",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.dev.vidnote",
    "asar": false,
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      {
        "from": "../client/dist",
        "to": "client/dist",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../server/dist",
        "to": "server/dist",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../server/node_modules",
        "to": "server/node_modules",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../server/package.json",
        "to": "server/package.json"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
}